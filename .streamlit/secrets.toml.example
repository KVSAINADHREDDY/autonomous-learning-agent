# Copy this file to secrets.toml and fill in your API keys
# In Streamlit Cloud, these are configured via the "Secrets" section in app settings

# LLM Provider (choose one)
LLM_PROVIDER = "groq"  # Options: "groq", "openai"

# Groq API Key (recommended - free tier available)
GROQ_API_KEY = "your_groq_api_key_here"

# OpenAI API Key (alternative)
OPENAI_API_KEY = "your_openai_api_key_here"

# Search Provider (choose one)
SEARCH_PROVIDER = "serpapi"  # Options: "serpapi", "duckduckgo"

# SerpAPI Key (for Google search)
SERPAPI_API_KEY = "your_serpapi_key_here"

# GitHub Token (optional, for repository analysis)
GITHUB_TOKEN = "your_github_token_here"
